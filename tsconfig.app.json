{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
  "strict": false,
  "noUnusedLocals": false,
  "noUnusedParameters": false,
  "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/api/**/*",
    "src/hooks/useDashboardStats.ts",
    "src/lib/usage-tracking.ts",
    "src/services/advancedCalculatorHistory.ts",
    "src/services/auditLogService.ts",
    "src/shared/hooks/auth/useUserProfile.ts",
    "src/shared/hooks/calculation-history/useSupabaseHistory.ts",
    "src/shared/hooks/useBusinessSettings.ts",
    "src/shared/hooks/useCollaboration.ts",
    "src/shared/hooks/useSecurityMonitoring.ts",
    "src/shared/hooks/useUserRoles.ts",
    "src/components/collaboration/**/*",
    "src/components/subscription/**/*",
    "src/domains/automation/**/*",
    "src/domains/calculator/**/*",
    "src/domains/subscription/**/*",
    "src/examples/**/*"
  ]
}
